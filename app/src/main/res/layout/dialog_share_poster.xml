<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="355dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/color_f2f2f2"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="305dp"
                android:background="@color/color_ffffff"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/icon_play" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="不避嫌了？张艺兴端着炒饭让热 巴吃，眼神都变得不一样了"
                    android:textColor="@color/color_333333"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="19dp"
                    android:background="@color/color_ff0043" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@mipmap/icon_min_logo"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="丽人视频"
            android:textColor="@color/color_ff0043"
            android:textSize="9sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="30dp"
        android:background="@color/color_f2f2f2"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/share_tu_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="15dp"
                android:drawableTop="@mipmap/icon_da_weixin"
                android:gravity="center"
                android:text="微信好友"
                android:textColor="@color/color_333333"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/share_tu_wx_pyq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="15dp"
                android:drawableTop="@mipmap/icon_da_pyq"
                android:gravity="center"
                android:text="朋友圈"
                android:textColor="@color/color_333333"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/share_tu_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="15dp"
                android:drawableTop="@mipmap/icon_da_qq"
                android:gravity="center"
                android:text="QQ"
                android:textColor="@color/color_333333"
                android:textSize="10sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/share_tu_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="15dp"
                android:drawableTop="@mipmap/icon_da_haibao"
                android:gravity="center"
                android:text="保存海报"
                android:textColor="@color/color_333333"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/clase"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/color_ffffff"
        android:gravity="center"
        android:text="取消分享"
        android:textColor="@color/color_333333"
        android:textSize="17sp" />
</LinearLayout>

